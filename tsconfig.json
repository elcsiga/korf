{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./korf-server/src",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "korf-server/src/**/*",
        "korf-ui/src/shared/**,*"
    ]
}